.carousel.slide(id='{$_name}', data-ride='carousel' style="height:270px;")
  ol.carousel-indicators
    li.active(data-target='#{$_name}', data-slide-to='0')
    li(data-target='#{$_name}', data-slide-to='1')
    li(data-target='#{$_name}', data-slide-to='2')
  .carousel-inner(role='listbox')
    | {rows}
    | {row}
    .item(class='{$active}')
      .row
        .col-md-2
        .col-md-8.text-center(style="margin-top:20px;")
          {show_text_wrapper}
          h3
            b {$text_to_write}
          {/}
          div
            a(href={$link})
              img(src='{$file}' alt_text="{$alt_text}" title="{$title}" description ="{$text_to_display}")
        .col-md-2
      .carousel-caption
    |   {/}{/}
  a.left.carousel-control(href='#{$_name}', role='button', data-slide='prev')
    span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
    span.sr-only Previous
  a.right.carousel-control(href='#{$_name}', role='button', data-slide='next')
    span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
    span.sr-only Next